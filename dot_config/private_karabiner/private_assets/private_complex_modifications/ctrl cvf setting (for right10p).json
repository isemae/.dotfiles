{
  "title": "컨트롤+C/V/F를 커맨드+C/V/F로 (for right10p)",
  "rules": [
    {
      "description": "컨트롤+C/V/F/X를 커맨드+C/V/F/X로 사용",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com.parallels.desktop",
                "com.parallels.vm",
                "com.parallels.desktop.console",
                "com.parallels.winapp."
              ]
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": { "mandatory": ["left_control"] }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["left_command"]
            }
          ]
        },
        {
          "type": "basic",
